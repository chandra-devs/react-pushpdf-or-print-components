{
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",
    "module": "commonjs",
    "lib": [ "dom", "es2018", "dom.iterable", "esnext" ],
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist/",
    "importHelpers": true,

    /* Strict Type-Checking Options */
    "strict": true,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* Module Resolution Options */
    "moduleResolution": "node",

    /* Experimental Options */
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "pretty": true,

    /* Interop Options */
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"]
}